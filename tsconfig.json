{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "alwaysStrict": true,
        "esModuleInterop": true,
        "incremental": false,
        "target": "ES2020",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "removeComments": true,
        "rootDir": "src",
        "sourceMap": true
    },
    
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}